<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:layout_marginTop="20dp">


    <EditText
        android:id="@+id/et_one"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:clickable="false"
        android:gravity="center"
        android:inputType="number"
        android:maxLength="1"
        android:textColor="@android:color/darker_gray"
        android:textSize="@dimen/dimen_text_size_tiny" />

    <EditText
        android:id="@+id/et_two"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:clickable="false"
        android:gravity="center"
        android:inputType="number"
        android:maxLength="1"
        android:textColor="@android:color/darker_gray"
        android:textSize="@dimen/dimen_text_size_tiny" />

    <EditText
        android:id="@+id/et_thress"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:clickable="false"
        android:gravity="center"
        android:inputType="number"
        android:maxLength="1"
        android:textColor="@android:color/darker_gray"
        android:textSize="@dimen/dimen_text_size_tiny" />

    <EditText
        android:id="@+id/et_four"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:clickable="false"
        android:gravity="center"
        android:inputType="number"
        android:maxLength="1"
        android:textColor="@android:color/darker_gray"
        android:textSize="@dimen/dimen_text_size_tiny" />

    <TextView
        android:id="@+id/tv_vercode"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:background="@drawable/round_corner_yellow_stroke"
        android:gravity="center_horizontal|center_vertical"
        android:text="获取验证码"
        android:textColor="@color/yellow_line"
        android:textSize="14sp" />

</LinearLayout>