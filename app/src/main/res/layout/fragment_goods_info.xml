<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <ruilelin.com.shifenlife.goodsinfopage.widget.SlideDetailsLayout
            android:id="@+id/sv_switch"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ScrollView
                android:id="@+id/sv_goods_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#eeeff3"
                    android:orientation="vertical">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="203dp"
                        android:background="@color/white">

                        <!-- 自动轮播的第三方控件 -->
                        <com.bigkoo.convenientbanner.ConvenientBanner xmlns:app="http://schemas.android.com/apk/res-auto"
                            android:id="@+id/vp_item_goods_img"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="#ffffff"
                            app:canLoop="true" />
                    </FrameLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:alpha="0.4"
                        android:background="#dddddd" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#ffffff"
                        android:orientation="vertical"
                        android:paddingLeft="12dp"
                        android:paddingTop="15dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="#ffffff"
                            android:paddingLeft="12dp"
                            >
                        <TextView
                            android:id="@+id/tv_goods_title"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="12dp"
                            android:ellipsize="end"
                            android:maxLines="2"
                            android:textStyle="bold"
                            android:text="当季超甜橙子"
                            android:textColor="#222222"
                            android:textSize="20sp" />
                        <TextView
                            android:id="@+id/tv_goods_guige"
                            android:layout_width="90dp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="12dp"
                            android:ellipsize="end"
                            android:maxLines="2"
                            android:text="规格(500克)"
                            android:textColor="#888888"
                            android:textSize="15sp" />
                            <TextView
                                android:id="@+id/tv_goods_sales"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="10dp"
                                android:ellipsize="end"
                                android:maxLines="1"
                                android:text="已售"
                                android:gravity="right"
                                android:textColor="@color/text_black"
                                android:textSize="18sp" />
                        </LinearLayout>
                        <TextView
                            android:paddingLeft="12dp"
                            android:id="@+id/tv_goods_detail"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="22dp"
                            android:ellipsize="end"
                            android:maxLines="2"
                            android:text="富含多种有机酸，维生素，可调节人体新陈代谢"
                            android:textColor="#888888"
                            android:textSize="15sp" />
                        <LinearLayout
                            android:paddingLeft="12dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="14dp"
                            android:layout_marginTop="15dp"
                            android:gravity="bottom"
                            android:minHeight="25dp"
                            android:orientation="horizontal"
                            >
                            <TextView
                                android:layout_width="15dp"
                                android:layout_height="wrap_content"
                                android:text="￥"
                                android:textColor="#ec0f38"
                                android:textSize="14sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tv_new_price"
                                android:layout_width="60dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="3dp"
                                android:text="599"
                                android:textColor="#ec0f38"
                                android:textSize="21sp"
                                />

                            <TextView
                                android:id="@+id/tv_old_price"
                                android:layout_width="80dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="7dp"
                                android:gravity="center_vertical"
                                android:text="￥799"
                                android:textColor="#888888"
                                android:textSize="13sp" />

                            <TextView
                                android:id="@+id/tv_shop_name"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="right"
                                android:ellipsize="end"
                                android:maxLines="1"
                                android:layout_marginRight="10dp"
                                android:text="百果园（花园浜店）"
                                android:textColor="#ec0f38"
                                android:textSize="18sp"
                                 />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ll_activity"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:clickable="true"
                            android:descendantFocusability="afterDescendants"
                            android:orientation="vertical">

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1px"
                                android:alpha="0.4"
                                android:background="#dddddd" />
                        </LinearLayout>
                    </LinearLayout>



                    <LinearLayout
                        android:id="@+id/ll_comment"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:background="@color/white"
                        android:gravity="center_vertical"
                        android:paddingLeft="12dp"
                        android:paddingRight="12dp"
                        android:orientation="vertical">
                        <CheckBox
                            android:clickable="false"
                            android:checked="true"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="同一店铺实付金额满20元包邮"
                            android:textSize="12sp"
                            android:id="@+id/check_you"/>
                        <CheckBox
                            android:clickable="false"
                            android:id="@+id/check_time"
                            android:checked="true"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:maxLines="1"
                            android:text="当天12点前下单下午配送，当天12点后下单隔天下午配送"
                            android:textSize="12sp"/>

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:alpha="0.4"
                        android:background="#dddddd" />




                    <!-- 上拉查看图文详情 -->
                    <LinearLayout
                        android:id="@+id/ll_pull_up"
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:layout_marginTop="10dp"
                        android:background="@color/white"
                        android:clickable="true"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="14dp"
                            android:layout_height="9dp"
                            android:scaleType="fitXY"
                            android:src="@mipmap/top" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="6dp"
                            android:text="上拉查看图文详情"
                            android:textColor="#222222"
                            android:textSize="14dp" />
                    </LinearLayout>
                </LinearLayout>
            </ScrollView>

            <include layout="@layout/include_item_tab" />
        </ruilelin.com.shifenlife.goodsinfopage.widget.SlideDetailsLayout>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab_up_slide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_margin="30dp"
            android:src="@mipmap/go_top"
            app:backgroundTint="#ffffff"
            app:borderWidth="0dp"
            app:fabSize="mini"
            app:rippleColor="#ffffff" />
    </android.support.design.widget.CoordinatorLayout>
</LinearLayout>