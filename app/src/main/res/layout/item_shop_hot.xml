<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="111dp"
    android:orientation="vertical"
    >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="110dp"
    android:orientation="horizontal">
    <ImageView
        android:id="@+id/image_product_pic"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginEnd="12dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="7dp"
        android:src="@mipmap/temp_product_pic"
         />
    <RelativeLayout
        android:layout_marginTop="7dp"
        android:layout_width="160dp"
        android:layout_height="100dp">
    <TextView
        android:id="@+id/tv_product_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:text="当季超甜橙子"
        android:textColor="@color/text_black"
         />

        <TextView
            android:id="@+id/tv_product_guige"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/tv_product_name"
            android:text="规格：500克"
            android:layout_marginLeft="10dp"
            android:textSize="10sp"/>

        <TextView
            android:layout_below="@id/tv_product_name"
            android:id="@+id/tv_product_dec"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="富含多种有机酸，维生素，可调节人体新陈代谢"
            android:maxLines="2"
            android:textSize="12sp"
            />

        <TextView
            android:layout_marginTop="5dp"
            android:layout_below="@id/tv_product_dec"
            android:id="@+id/tv_product_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_red"
            android:text="5.77元"
            />
        <TextView
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_below="@id/tv_product_dec"
            android:layout_toRightOf="@id/tv_product_price"
            android:id="@+id/tv_product_origin_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="37元"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:layout_marginRight="20dp">

        <TextView
            android:layout_alignParentRight="true"
            android:id="@+id/tv_product_sale_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:text="已售：200"
            android:textColor="@color/text_black"/>

        <TextView
            android:layout_alignParentRight="true"
            android:id="@+id/tv_shopname"
            android:layout_width="wrap_content"
            android:maxLines="1"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_product_sale_num"
            android:layout_marginTop="5dp"
            android:text="百果园（花园浜店）"
            android:textColor="@color/text_red"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/imgae_cart"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_shopname"
            android:layout_marginTop="5dp"
            android:src="@mipmap/icon_cart" />
    </RelativeLayout>
</LinearLayout>
    <View
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/lightgray" />
</LinearLayout>